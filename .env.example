# Telegram Bot
BOT_TOKEN="your-telegram-bot-token"

# Supabase (shared with other bots)
# Provide service role key for server (preferred), anon/public key as fallback.
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"
SUPABASE_KEY="your-supabase-anon-or-public-key"

# Redis (shared cache for token balances)
REDIS_URL="redis://localhost:6379/0"

# Seedream API (KIE)
SEEDREAM_API_BASE="https://api.kie.ai/api/v1"
SEEDREAM_API_KEY="your-seedream-api-key"
SEEDREAM_MODEL_T2I="bytedance/seedream-v4-text-to-image"
SEEDREAM_MODEL_EDIT="bytedance/seedream-v4-edit"

# Optional
REQUEST_TIMEOUT_SECONDS=60

# Webhook (Railway / uvicorn)
WEBHOOK_URL="https://your-app-name.up.railway.app"
WEBHOOK_PATH="/webhook"
WEBHOOK_SECRET_TOKEN="optional-secret-token"

# Tribute Payments
# API key used to verify webhook signature (HMAC-SHA256).
TRIBUTE_API_KEY="your-tribute-api-key"
# Map token amounts to Tribute product IDs (JSON). Product IDs can be numeric or string slugs.
# If product IDs are strings, they MUST be quoted in JSON: {"50":"plJp"}
TRIBUTE_PRODUCT_MAP="{\"1\":12345, \"15\":23456, \"30\":\"abc12\", \"50\":\"plJp\", \"100\":56789}"