# Telegram Bot
BOT_TOKEN="your-telegram-bot-token"

# Supabase (shared with other bots)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-service-role-key"

# Redis (shared cache for token balances)
REDIS_URL="redis://localhost:6379/0"

# NanoBanana API
NANOBANANA_API_BASE="https://kie.ai/nano-banana"
NANOBANANA_API_KEY="your-nanobanana-api-key"

# Optional
REQUEST_TIMEOUT_SECONDS=60

# Webhook (Railway / uvicorn)
WEBHOOK_URL="https://your-app-name.up.railway.app"
WEBHOOK_PATH="/webhook"
WEBHOOK_SECRET_TOKEN="optional-secret-token"

# Tribute Payments
# API key used to verify webhook signature (HMAC-SHA256).
TRIBUTE_API_KEY="your-tribute-api-key"
# Map token amounts to Tribute product IDs (JSON): {"1":12345, "15":23456}
TRIBUTE_PRODUCT_MAP="{\"1\":12345, \"15\":23456, \"30\":34567, \"50\":45678, \"100\":56789}"